<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:id="@+id/historyfragment_incexp_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/historyfragment_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/ff_meta_pro_book"
                android:padding="5dp"
                android:text="Inc"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/historyfragment_expenditure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@color/lighterRed"
                android:fontFamily="@font/ff_meta_pro_book"
                android:padding="5dp"
                android:text="Exp"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/historyfragment_annual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/ff_meta_pro_book"
                android:padding="5dp"
                android:text="Éves"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/historyfragment_monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@color/lighterGray"
                android:fontFamily="@font/ff_meta_pro_book"
                android:padding="5dp"
                android:text="Havi"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/history_listview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="90" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/lightGray"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ff_meta_pro_book"
            android:gravity="center_vertical"
            android:text="Σ összesen: "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/historyfragment_monthlybalancetext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ff_meta_pro_book"
            android:gravity="center_vertical"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10">

        <ImageButton
            android:id="@+id/historyfragment_prevmonth"
            android:layout_width="@dimen/iconsize_large"
            android:layout_height="@dimen/iconsize_large"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_media_previous" />

        <TextView
            android:id="@+id/historyfragment_currentmonthtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/ff_meta_pro_book" />

        <ImageButton
            android:id="@+id/historyfragment_nextmonth"
            android:layout_width="@dimen/iconsize_large"
            android:layout_height="@dimen/iconsize_large"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_media_next" />


    </RelativeLayout>

</LinearLayout>