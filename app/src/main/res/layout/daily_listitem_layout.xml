<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daily_listitem_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/daily_listitem_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="3dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/daily_listitem_repetitive_icon"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@id/daily_listitem_icon"
        android:src="@android:drawable/ic_menu_rotate"
        android:visibility="gone" />

    <TextView
        android:id="@+id/daily_listitem_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/daily_listitem_repetitive_icon"
        android:fontFamily="@font/ff_meta_pro_book"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/daily_listitem_subcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/daily_listitem_category"
        android:layout_toEndOf="@id/daily_listitem_repetitive_icon"
        android:fontFamily="@font/ff_meta_pro_book"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/daily_listitem_deleteentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:src="@android:drawable/ic_menu_delete"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/daily_listitem_editentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/daily_listitem_deleteentry"
        android:src="@android:drawable/ic_menu_edit"
        android:visibility="gone" />

    <TextView
        android:id="@+id/daily_listitem_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/ff_meta_pro_book" />

</RelativeLayout>