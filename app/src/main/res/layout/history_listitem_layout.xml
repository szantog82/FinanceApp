<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/history_listitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ff_meta_pro_book"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/history_listitem_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/history_listitem_date"
        android:layout_marginEnd="3dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/history_listitem_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_listitem_date"
        android:layout_toEndOf="@id/history_listitem_icon"
        android:fontFamily="@font/ff_meta_pro_book"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_listitem_subcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_listitem_category"
        android:layout_toEndOf="@id/history_listitem_icon"
        android:fontFamily="@font/ff_meta_pro_book"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/history_listitem_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/ff_meta_pro_book"
        android:textSize="18dp" />

</RelativeLayout>