<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:fontFamily="@font/ff_meta_pro_book"
        android:text="Ismétlődő kiadások és bevételek"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <ImageView
            android:id="@+id/repetitiveactivity_newentry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_input_add" />

        <ImageView
            android:id="@+id/repetitiveactivity_editentry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/repetitiveactivity_deleteentry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_delete"
            android:visibility="invisible" />

    </LinearLayout>

    <ListView
        android:id="@+id/repetitiveactivity_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:divider="@color/lightGray"
        android:dividerHeight="3dp"></ListView>


</LinearLayout>