<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.szantog.finance">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/money_wallet_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/money_wallet_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.InitActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:noHistory="true"></activity>
        <activity
            android:name=".Activities.RepetitiveEditActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:noHistory="true"></activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:noHistory="true"></activity>
        <activity
            android:name=".Activities.SQLQueryActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTop"
            android:noHistory="true"></activity>
    </application>

</manifest>