<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:minHeight="400dp"
    android:minWidth="400dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_folderup"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/arrow_up_float" />

        <TextView
            android:id="@+id/dialog_currentfolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@android:color/holo_orange_light"
            android:padding="5dp"
            android:text="@string/storage" />

        <TextView
            android:id="@+id/dialog_sdcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@android:color/holo_orange_light"
            android:padding="5dp"
            android:text="@string/sdcard" />

    </LinearLayout>

    <ListView
        android:id="@+id/dialog_listview"
        android:layout_width="wrap_content"
        android:layout_height="300dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:background="#000000" />

    <RelativeLayout
        android:id="@+id/dialog_footer_openfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_selectedfile_openfile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dialog_okbtn_openfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@android:drawable/checkbox_on_background"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_footer_savefile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dialog_selectedfile_savefile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialog_okbtn_savefile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@android:drawable/checkbox_on_background" />

    </RelativeLayout>

</LinearLayout>